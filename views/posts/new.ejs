<%- include('../partials/html-head') %>
<!-- <link rel="stylesheet" href="/stylesheets/posts-new.css"> -->
<link rel="stylesheet" href="/stylesheets/posts-edit.css">
<%- include('../partials/nav') %>

<main id="posts-new">
  <div class="div-1">
    <h1 class="centered">New Whimsy Entry</h1>
    <hr>
  </div>
  <section class="flex-row">
    <div class="div-2">
    <form action="/posts" method="POST">
      <label> Date:</label>
      <p class="white-div" id="date-div"><%= new Date().toLocaleDateString() %></p>
    </div>
    <div class="div-3">
      <label for="title-input">Title:</label>
      <input type="text" name="title" id="title-input" placeholder="Whimsy Name">
    </div> 
    <div class="div-4" > 
      <label for="feelings-input" >Feelings:</label>
      <select name="feelings" id="feelings-input" >
        <option value="😄">😄</option>
        <option value="😢">😢</option>
        <option value="🥳">🥳</option>
        <option value="😴">😴</option>
        <option value="😠">😠</option>
        <option value="😎">😎</option>
        <option value="🥰">🥰</option>
        <option value="😋">😋</option>
        <option value="😂">😂</option>
        <option value="🤠">🤠</option>
      </select>
    </div>
    <div class="div-5" id="checkbox-div"> 
      <label for="public-checkbox">Public:</label>
      <input type="checkbox" name="public"id="public-checkbox">
    </div> 
  </section>
  <div class="div-6 centered"> 
      <h2 class="centered">Need a hand? Try writing about this!</h2>
      <h3 class="centered"><em><%= getRandomJournalPrompt() %></em></h3>
    </div>
    <div class="div-7 centered">
      <label for="entry-input" class="non-inline-label">Entry: <span class="thin-letters"> *</span></label>
    </div>
    <div class="div-8 centered">
      <textarea name="content" id="entry-input" cols="30" rows="10" placeholder="Type your Whimsy entry here..."></textarea>
      <p class="centered">*required to save Whimsy entry</p>
      <button type="submit" class="centered" id="save-button">Save Whimsy</button>
    </form>
  </div>
</main>

<%- include('../partials/footer') %>