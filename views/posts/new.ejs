<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts-new.css">
<%- include('../partials/nav') %>

<main id="posts-new">
  <h1>New Whimsy Entry</h1>
  <form action="/posts" method="POST">
    <section class="" id="new-post-sec-1">
      <label for="date-input">Date:</label>
      <input type="date" name="date" id="date-input">
      <label for="title-input">Title:</label>
      <input type="text" name="title" id="title-input" placeholder="Whimsy Name">
    </section>
    <section class="form-section" id="new-post-sec-2">
      <label for="feelings-input">Today I am Feeling:</label>
      <select name="feelings" id="feelings-input">
        <option value="😄">😄</option>
        <option value="😢">😢</option>
        <option value="🥳">🥳</option>
        <option value="😴">😴</option>
        <option value="😠">😠</option>
        <option value="😎">😎</option>
        <option value="🥰">🥰</option>
        <option value="😋">😋</option>
        <option value="😂">😂</option>
        <option value="🤠">🤠</option>
      </select>
      <label for="public-checkbox">Public:</label>
      <input type="checkbox" name="public"id="public-checkbox">
    </section>
    <section class="form-section" id="new-post-sec-3">
      <h2>Need a hand? Try writing about this!</h2>
      <h3><em><%= getRandomJournalPrompt() %></em></h3>
    </section>
    <section class="form-section" id="new-post-sec-4">
      <label for="entry-input">Entry:</label>
      <textarea name="content" id="entry-input" cols="30" rows="10" placeholder="Type your Whimsy entry here..."></textarea>
      <p>*required to save Whimsy entry</p>
      <button type="submit">Save Whimsy</button>
    </section>
  </form>
</main>

<%- include('../partials/footer') %>