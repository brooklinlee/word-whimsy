<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h1>INDEX PAGE</h1>

<main>
  <section>
    <!-- Set up isSelf to view only your whimsy entries -->
    <!-- Or display "You don't have any entries yet, start writing here" -->

    
    <h1>Your Whimsy</h1>
    <h4>Whimsy Writer since ...</h4>
    <h4>... Whimsy Entries</h4>
    <a href="/posts/new">
      <button type="submit">New Whimsy</button>
    </a>
  </section>
  <section>
    <% posts.forEach(post => { %>
    <div class="white-div">
      <form action="/posts/<%= post._id %>" method="GET">
        <button type="submit"><%= post.title%></button>
      </form>
      <p><%= post.date%></p>
      <p><%= post.feelings%></p>
      <p><%= post.public ? 'Public' : 'Private' %></p>
      
      <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
        <button type="submit">❌</button>
      </form>
      <form action="/posts/<%= post._id %>/edit" method="GET">
        <button type="submit">✏️</button>
      </form>
    </div>
    <% }) %>
  </section>
</main>

<%- include('../partials/footer') %>