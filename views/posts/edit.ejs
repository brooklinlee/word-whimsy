<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
<h1>EDIT PAGE</h1>
<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
  <section>
    <label for="entry-edit">Edit:</label>
    <input type="textbox" name="content" id="entry-edit" value="<%= post.content %>">
  </section>
  <section>
    <label for="date-edit">Date:</label>
    <input type="text" name="date" id="date-edit" value="<%= post.date %>">
    <label for="title-edit">Title:</label>
    <input type="text" name="title" id="title-edit" value="<%= post.title %>">
    <label for="feelings-edit">Today I am Feeling:</label>
    <select name="feelings" id="feelings-edit">
      <option value="<%= post.feelings %>"><%= post.feelings %></option>
      <option value="😄">😄</option>
      <option value="😢">😢</option>
      <option value="🥳">🥳</option>
      <option value="😴">😴</option>
      <option value="😠">😠</option>
      <option value="😎">😎</option>
    </select>
    <label for="public-checkbox">Public:</label>
    <input type="checkbox" id="public-checkbox">
  </section>
  
  <button type="submit">Save Whimsy</button>
</form>
</main>

<%- include('../partials/footer') %>