<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts-edit.css">
<%- include('../partials/nav') %>

<main id="posts-edit">
  <div id="div-1">
    <h1 class="centered">Edit "<%= post.title %>" Whimsy</h1>
  </div>
  <section class="flex-row">
  <div id="div-2">
    <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
      <label for="date-edit">Date:</label>
      <input type="date" name="date" id="date-edit" value="<%= post.date %>">
  </div>
  <div id="div-3">
    <label for="title-edit">Title:</label>
    <input type="text" name="title" id="title-edit" value="<%= post.title %>">
  </div> 
  <div id="div-4">  
    <label for="feelings-edit">Today I am Feeling:</label>
    <select name="feelings" id="feelings-edit">
      <option value="<%= post.feelings %>"><%= post.feelings %></option>
      <option value="😄">😄</option>
      <option value="😢">😢</option>
      <option value="🥳">🥳</option>
      <option value="😴">😴</option>
      <option value="😠">😠</option>
      <option value="😎">😎</option>
      <option value="🥰">🥰</option>
      <option value="😋">😋</option>
      <option value="😂">😂</option>
      <option value="🤠">🤠</option>
    </select>
  </div>
  <div id="div-5">     
    <label for="public-checkbox-edit">Public:</label>
    <input type="checkbox" name="public" id="public-checkbox" <%= post.public ? 'checked' : '' %> id="public-checkbox-edit">
  </div> 
  </section>
  <div id="div-6">   
    <label for="entry-edit">Edit:</label>
    <textarea name="content" id="entry-edit" cols="30" rows="30" id="edit-textarea"><%= post.content %></textarea>
    <button type="submit">Save Whimsy</button>
    </form>
  </div>

</main>

<%- include('../partials/footer') %>