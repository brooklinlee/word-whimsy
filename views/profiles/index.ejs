<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles-index.css">
<%- include('../partials/nav') %>

<main id="profiles-index-main">
  <% profiles.forEach(profile=> { %>
    <div class="white-div" id="profiles-index-div">
      <section id="profiles-icon">
        <p>
          <%= getRandomIcon() %>
        </p>
      </section>
      <section id="profiles-index-text">
        <h1><a href="/profiles/<%= profile._id %>">
            <%= profile.name %>
          </a></h1>
        <% if (profile.posts.length===0) { %>
          No Whimsy Entries
          <% } else if (profile.posts.length> 1) { %>
            <%= profile.posts.length %> Whimsy Entries
              <% } else { %>
                <%= profile.posts.length %> Whimsy Entry
                  <% } %>
                
      </section>
    </div>
    <% }) %>
</main>

<%- include('../partials/footer') %>