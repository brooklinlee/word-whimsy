<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles-index.css">
<%- include('../partials/nav') %>

<main id="profiles-index-main">
  <% profiles.forEach(profile => { %>
    <div class="white-div" class="profiles-index-div">
      <section>
        <a href="/profiles/<%= profile._id %>"><h1><%= profile.name %></h1></a>
        <!-- number of posts -->
        <p><%= profile.posts.length %></p>
      </section>
      <section>
        <%= getRandomIcon() %>
      </section>
    </div>
  <% }) %>
</main>

<%- include('../partials/footer') %>